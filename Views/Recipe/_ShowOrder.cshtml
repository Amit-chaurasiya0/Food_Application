@model Food_Application.Models.OrderRecipeDetails

<div class="container-fluid shadow rounded">
    <div class="row">
        <div class="col-12">
            <img src="@Model.image_url" class="w-100" id="order-img" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10">
            <h2 class="text-dark">@Model.title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var ing in Model.Ingredients)
                    {
                        <tr>
                            <td>@ing.description</td>
                            <td>@ing.quantity</td>
                            <td>@ing.unit</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <form autocomplete="off" method="post" >
                <input type="hidden" value="@Model.id" name="RecipeId" />
                <input type="hidden" value="@Model.title" name="RecipeName" />
                <input type="hidden" value="@ViewBag.UserId" name="UserId" />
                <div class="p-2">
                    <p class="text-dark">Bill Details</p>
                    <div class="row border-bottom ">
                        <label class="col-10 col-form-label text-muted">Price</label>
                        <div class="col-2">
                            <i class="fa-solid fa-indian-rupee-sign text-muted"></i>
                            <input id="price" type="text" name="Price" readonly value="@ViewBag.price"/>
                        </div>
                    </div>
                    <div class="row border-bottom">
                        <label class="col-9 col-form-label text-muted">Quantity</label>
                        <div  id="QtySelector" class="col-3 border border-success border-2 p-1 text-center rounded">
                            <span onclick="quantity('inc')"><i class="fa-solid fa-plus text-success"></i></span>
                            <input type="text" id="Qty" name="Quantity" value="1" class="bg-white text-center text-success fw-bold" readonly />
                            <span onclick="quantity('dec')"><i class="fa-solid fa-minus text-success"></i></span>
                        </div>
                    </div>
                    <div class="row border-bottom">
                        <label class="col-10 col-form-label text-muted">Delivery Charge</label>
                        <label class="col-2 col-form-label text-success fw-bold ">Free</label>
                    </div>
                    <div class="px-1 mb-2">
                        <label class="form-label text-muted">Delevery Address</label>
                        <input type="text" class="form-control" name="Address" value="@ViewBag.Address"/>
                        @Html.ValidationMessage("Address")
                    </div>
                    <div class="row border-top border-dark border-1">
                        <div class="col-9">
                            <label class="col-form-label fs-5 fw-bold">Total</label>
                        </div>
                        <div class="col-3">
                            <i class="fa-solid fa-indian-rupee-sign"></i>
                            <input type="text" id="TotalAmount" readonly value="@ViewBag.price" name="TotalAmount" />
                        </div>                    
                    </div>
                    <div>
                        <button type="submit" class=" btn btn-sm btn-success p-2 shadow rounded">Order</button>
                    </div>
                </div>
            </form>
        </div>
    </div>    
</div>