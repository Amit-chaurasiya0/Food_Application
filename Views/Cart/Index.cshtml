@model IEnumerable<Food_Application.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="border-bottom">
                <h4 class="text-dark">Recipe Cart</h4>
                <p class="text-muted fst-italic">@Model.Count() Recipes in cart</p>
            </div>
            <div>
                @foreach (var cart in Model)
                {
                    <div class="row border-bottom">
                        <div class=" col-8 d-flex flex-wrap p-2 ">
                            <img src="@cart.Image_url" class="cartImage"/>
                            <a asp-controller="Recipe" asp-action="Order" asp-route-item="@cart.RecipeId"
                            class="text-decoration-none text-dark px-2 fw-bold">@cart.Title</a>                        
                        </div>
                        <div class="col-4">
                            <span onclick="removeCartFromList('@cart.RecipeId')" class="btn text-danger p-2 fw-bold removeCartBtn">Remove</span>
                        </div>                   
                    </div>
                }
                @if(Model.Count()==0)
                {
                   <div class="text-center">
                        <i class="fa-solid fa-cart-shopping text-warning emptCart"></i>
                        <p class="fw-bold fs-4">your cart is empty</p>
                   </div>
                }
            </div>
        </div>
    </div>
</div>